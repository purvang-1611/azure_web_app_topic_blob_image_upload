
<form action='/product' method="GET">
  <h3>Click For Receive Orders!</h3>
  <div class="upload-container"><input type="submit" value="All Product"></div>
</form>

<form id="upload-form" action="/upload" method="POST" enctype="multipart/form-data">
  <h3>Item Name:</h3>
  <div class="upload-container"><input type="text" id="itemName" name="itemName"></div>
  <h3>Item Quantity:</h3>
  <div class="upload-container"><input type="number" id="itemQty" name="itemQty"></div>
  <h3>Item Price:</h3>
  <div class="upload-container"><input type="number" id="itemPrice" name="itemPrice"></div>
  <h3>Select an image to upload:</h3>
  <div class="upload-container"><input id="file-picker" type="file" id="itemImg" name="image" accept="image/*"></div>
  <div><input type="submit" value="Upload Image"></div>
</form>

